  ${moniker}:
    container_name: ${moniker}
    image: ${DOCKER_IMAGE}
    environment:
      - HOME=/data/data/${moniker}
      - DAEMON_NAME=allorad
      - DAEMON_HOME=/data/data/${moniker}
    volumes:
      - ${APP_HOME}:/data
    user: "${UID_GID_VAR}"
    entrypoint:
      - allorad
    command:
      - start
      - --home=/data/data/${moniker}
      - --moniker=${moniker}
      - --minimum-gas-prices=0uallo
      - --rpc.laddr=tcp://0.0.0.0:26657
      - --p2p.pex=false
      - --p2p.persistent_peers=${PEERS}
      - --grpc.address=0.0.0.0:9090
      - --grpc.enable
      - --api.address=tcp://0.0.0.0:1317
      - --api.enable
      - --api.enabled-unsafe-cors
      - --api.swagger
    ports:
      - ${validatorPort}:26657
      - ${validatorApiPort}:1317
      - ${validatorGrpcPort}:9090
    networks:
      local-net:
        aliases:
          - ${moniker}
        ipv4_address: ${ipAddress}
